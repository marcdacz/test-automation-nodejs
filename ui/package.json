{
  "name": "momenton-ui-test",
  "version": "1.0.0",
  "description": "Momenton UI Test Automation",
  "author": "Marc Dacanay",
  "scripts": {
    "mocha": "node ./node_modules/mocha/bin/mocha",
    "test-chrome": "cross-env BROWSER=chromium mocha --require ./config/setup --recursive --timeout 30000 --reporter mochawesome",
    "test-firefox": "cross-env BROWSER=firefox mocha --require ./config/setup --recursive --timeout 30000 --reporter mochawesome"
  },
  "dependencies": {
    "chai": "^4.2.0",
    "cross-env": "^7.0.2",
    "fs-extra": "^8.1.0",
    "lodash": "^4.17.15",
    "mocha": "^7.1.0",
    "mochawesome": "^5.0.0",
    "playwright": "^0.11.1"
  }
}
